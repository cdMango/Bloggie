@page
@model Bloggie.Web.Pages.Admin.Blogs.AddModel

@{
   
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Blog Post</h1>
    </div> 
</div>


<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" aria-describedby="Heading" asp-for="AddBlogPostRequest.Heading">
            </div>

            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle" aria-describedby="pageTitle" asp-for="AddBlogPostRequest.PageTitle">
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="AddBlogPostRequest.Content"></textarea>
            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input asp-for="AddBlogPostRequest.ShortDescription" class="form-control" id="shortDescription">
            </div>

            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                <input   class ="form-control" id="featuredImageUrl" asp-for="AddBlogPostRequest.FeaturedImageURL">
            </div>

            <div class="mb-3">
                <label for="urlHandle" class="form-label">urlHandle</label>
                <input class="form-control" id="urlHandle" asp-for="AddBlogPostRequest.UrlHandle">
            </div>

            <div class="mb-3">
                <label for="PublishedDate" class="form-label">Publish Date</label>
                <input name = "PublishedDate" type="date" class="form-control" id="PublishedDate" asp-for="AddBlogPostRequest.PublishedDateTime">
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isVisible" asp-for="AddBlogPostRequest.Visible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>

            <div class="mb-3">
                <label for="Author" class="form-label">Author</label>
                <input class="form-control" id="Author" asp-for="AddBlogPostRequest.Author">
            </div>
            
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

        </form>
    </div>
</div>

@section Scripts
{ 
    <script>
        var editor = new FroalaEditor('#content'); 
    </script>
}
